 * from Sanity. This file is kept here temporarily to avoid breaking changes.
 */

// Empty placeholder to avoid errors
export const components = {}
---

<>
  <!-- These styles apply to the Portable Text content -->
  <style is:global>
    .sanity-portable-text h1 {
      font-size: 1.875rem; /* text-3xl */
      font-weight: 700; /* font-bold */
      margin-top: 2.5rem; /* mt-10 */
      margin-bottom: 1rem; /* mb-4 */
      line-height: 1.2;
    }
    .sanity-portable-text h2 {
      font-size: 1.5rem; /* text-2xl */
      font-weight: 700; /* font-bold */
      margin-top: 2rem; /* mt-8 */
      margin-bottom: 0.75rem; /* mb-3 */
      line-height: 1.2;
    }
    .sanity-portable-text h3 {
      font-size: 1.25rem; /* text-xl */
      font-weight: 700; /* font-bold */
      margin-top: 1.5rem; /* mt-6 */
      margin-bottom: 0.5rem; /* mb-2 */
      line-height: 1.2;
    }
    .sanity-portable-text h4 {
      font-size: 1.125rem; /* text-lg */
      font-weight: 700; /* font-bold */
      margin-top: 1.25rem; /* mt-5 */
      margin-bottom: 0.5rem; /* mb-2 */
      line-height: 1.2;
    }
    .sanity-portable-text p {
      margin-bottom: 1.5rem; /* mb-6 */
      line-height: 1.7; /* leading-relaxed */
    }
    .sanity-portable-text ul {
      list-style-type: disc; /* list-disc */
      padding-left: 1.25rem; /* pl-5 */
      margin-bottom: 1.5rem; /* mb-6 */
    }
    .sanity-portable-text ul > * + * {
      margin-top: 0.5rem; /* space-y-2 */
    }
    .sanity-portable-text ol {
      list-style-type: decimal; /* list-decimal */
      padding-left: 1.25rem; /* pl-5 */
      margin-bottom: 1.5rem; /* mb-6 */
    }
    .sanity-portable-text ol > * + * {
      margin-top: 0.5rem; /* space-y-2 */
    }
    .sanity-portable-text blockquote {
      border-left-width: 4px; /* border-l-4 */
      border-left-color: #f59e0b; /* border-yellow-500 */
      padding-left: 1rem; /* pl-4 */
      padding-top: 0.5rem; /* py-2 */
      padding-bottom: 0.5rem; /* py-2 */
      margin-top: 1.5rem; /* my-6 */
      margin-bottom: 1.5rem; /* my-6 */
      font-style: italic; /* italic */
    }
    .sanity-portable-text a {
      color: #fbbf24; /* text-yellow-400 */
    }
    .sanity-portable-text a:hover {
      text-decoration: underline; /* hover:underline */
    }
    .sanity-portable-text code {
      background-color: #1f2937; /* bg-gray-800 */
      color: #e5e7eb; /* text-gray-200 */
      padding-left: 0.25rem; /* px-1 */
      padding-right: 0.25rem; /* px-1 */
      padding-top: 0.125rem; /* py-0.5 */
      padding-bottom: 0.125rem; /* py-0.5 */
      border-radius: 0.25rem; /* rounded */
      font-family:
        ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas,
        'Liberation Mono', 'Courier New', monospace; /* font-mono */
      font-size: 0.875rem; /* text-sm */
    }
    .sanity-portable-text pre {
      background-color: #111827; /* bg-gray-900 */
      padding: 1rem; /* p-4 */
      border-radius: 0.5rem; /* rounded-lg */
      overflow-x: auto; /* overflow-x-auto */
      margin-top: 1.5rem; /* my-6 */
      margin-bottom: 1.5rem; /* my-6 */
    }
    .sanity-portable-text img {
      width: 100%; /* w-full */
      height: auto; /* h-auto */
      border-radius: 1rem; /* rounded-2xl */
      margin-top: 1.5rem; /* my-6 */
      margin-bottom: 1.5rem; /* my-6 */
    }
    .sanity-portable-text figure {
      margin-top: 2rem; /* my-8 */
      margin-bottom: 2rem; /* my-8 */
    }
    .sanity-portable-text figcaption {
      margin-top: 0.5rem; /* mt-2 */
      font-size: 0.875rem; /* text-sm */
      color: #6b7280; /* text-gray-500 */
      text-align: center; /* text-center */
    }
  </style>
</>
