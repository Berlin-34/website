---
import '@fontsource/plus-jakarta-sans'
import '@fontsource/satisfy'
import '@/styles/global.css'
import Header from '@/components/layout/Header.astro'
import Footer from '@/components/layout/Footer.astro'
import CustomCursor from '@/react/custom-cursor'
import PostHog from '@/components/posthog.astro'
import SkipToContent from '@/components/common/SkipToContent.astro'
import StructuredData from '@/components/common/StructuredData.astro'

const { 
  content = { 
    title: 'KP Infotech', 
    description: 'KP Infotech - Your Digital Transformation Partner. We create innovative solutions to improve your online visibility and optimize business processes.' 
  },
  enableCustomCursor = true 
} = Astro.props;

// Current URL for OG tags
const currentUrl = Astro.url.href;
---

<html lang="en">
  <head>
    <PostHog />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.jpg" />
    <StructuredData />
    
    <!-- Primary Meta Tags -->
    <title>{content.title}</title>
    <meta name="title" content={content.title} />
    <meta name="description" content={content.description} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={content.title} />
    <meta property="og:description" content={content.description} />
    <meta property="og:image" content="/og-image.jpg" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={currentUrl} />
    <meta property="twitter:title" content={content.title} />
    <meta property="twitter:description" content={content.description} />
    <meta property="twitter:image" content="/og-image.jpg" />
  </head>
  <body class={`font-primary grid grid-rows-[auto_1fr_auto] ${enableCustomCursor ? 'cursor-none' : ''}`}>
    <SkipToContent />
    {enableCustomCursor && <CustomCursor client:load />}
    <Header />
    <main id="main-content">
      <slot />
    </main>
    <Footer />
  </body>
</html>
