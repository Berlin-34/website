---
interface Props {
  variant?: 'primary' | 'secondary' | 'text';
  href?: string;
  type?: 'button' | 'submit';
  class?: string;
  icon?: boolean;
}

const {
  variant = 'primary',
  href,
  type = 'button',
  class: className = '',
  icon = false
} = Astro.props;

const Tag = href ? 'a' : 'button';
---

<Tag
  href={href}
  type={!href ? type : undefined}
  class:list={['btn', `btn--${variant}`, { 'btn--icon': icon }, className]}
>
  <span class="btn__text">
    <slot />
  </span>
  {variant === 'text' && (
    <span class="btn__arrow">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M5 12h14M12 5l7 7-7 7"/>
      </svg>
    </span>
  )}
  {variant === 'primary' && <span class="btn__fill"></span>}
</Tag>

<style>
  .btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-body), 'Outfit', sans-serif;
    font-size: 0.75rem;
    font-weight: 400;
    letter-spacing: 0.1875em;
    text-transform: uppercase;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .btn__text {
    position: relative;
    z-index: 1;
  }

  /* Primary: Ghost style with accent border, fills on hover */
  .btn--primary {
    padding: 1rem 2rem;
    background: transparent;
    border: 1px solid var(--accent);
    color: var(--accent);
  }

  .btn--primary .btn__fill {
    position: absolute;
    inset: 0;
    background: var(--accent);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease;
    z-index: 0;
  }

  .btn--primary:hover {
    color: var(--bg-primary);
  }

  .btn--primary:hover .btn__fill {
    transform: scaleX(1);
  }

  /* Secondary: Solid accent fill */
  .btn--secondary {
    padding: 1rem 2rem;
    background: var(--accent);
    border: 1px solid var(--accent);
    color: var(--bg-primary);
  }

  .btn--secondary:hover {
    background: var(--accent-light, #e4d4bc);
    border-color: var(--accent-light, #e4d4bc);
  }

  /* Text: Minimal with arrow */
  .btn--text {
    padding: 0.5rem 0;
    background: transparent;
    border: none;
    color: var(--text-primary);
  }

  .btn--text .btn__arrow {
    transition: transform 0.3s ease;
  }

  .btn--text:hover {
    color: var(--accent);
  }

  .btn--text:hover .btn__arrow {
    transform: translateX(4px);
  }

  /* Focus states */
  .btn:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: 4px;
  }
</style>
