---
interface Props {
  text: string;
  class?: string;
  variant?: 'default' | 'centered';
}

const { text, class: className = '', variant = 'default' } = Astro.props;
---

<span class:list={['section-label', `section-label--${variant}`, className]}>
  <span class="section-label__line"></span>
  {text}
  {variant === 'centered' && <span class="section-label__line"></span>}
</span>

<style is:global>
  .section-label__line {
    display: block;
    width: 40px;
    height: 1px;
    background-color: var(--accent);
  }
</style>
