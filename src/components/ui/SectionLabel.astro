---
interface Props {
  text: string;
  class?: string;
  variant?: 'default' | 'centered';
}

const { text, class: className = '', variant = 'default' } = Astro.props;
---

<span class:list={['section-label', `section-label--${variant}`, className]}>
  <span class="section-label__line-start"></span>
  {text}
  <span class="section-label__line-end"></span>
</span>

<style is:global>
  .section-label__line-start,
  .section-label__line-end {
    display: block;
    width: 40px;
    height: 1px;
    background-color: var(--accent);
  }

  /* Default: only show start line */
  .section-label--default .section-label__line-end {
    display: none;
  }

  /* Centered: show both lines */
  .section-label--centered .section-label__line-start,
  .section-label--centered .section-label__line-end {
    display: block;
  }
</style>
