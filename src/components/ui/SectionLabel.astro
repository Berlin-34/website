---
interface Props {
  text: string;
  class?: string;
  variant?: 'default' | 'centered';
}

const { text, class: className = '', variant = 'default' } = Astro.props;
---

<span
  class:list={['section-label', className]}
  style="display:inline-flex;align-items:center;gap:16px;font-family:var(--font-body);font-size:11px;font-weight:400;letter-spacing:4px;text-transform:uppercase;color:var(--accent);"
>
  <span style="display:inline-block;width:40px;height:1px;background-color:var(--accent);flex-shrink:0;"></span>
  {variant === 'default' && <span style="display:inline-block;width:40px;height:1px;background-color:var(--accent);flex-shrink:0;"></span>}
  {text}
  {variant === 'centered' && <span style="display:inline-block;width:40px;height:1px;background-color:var(--accent);flex-shrink:0;"></span>}
</span>
