---
interface Props {
  text: string;
  class?: string;
  variant?: 'default' | 'centered';
}

const { text, class: className = '', variant = 'default' } = Astro.props;
---

<span class:list={['section-label', `section-label--${variant}`, className]}>
  {variant === 'default' && <span class="section-label__line"></span>}
  {variant === 'centered' && <span class="section-label__line"></span>}
  {text}
  {variant === 'centered' && <span class="section-label__line"></span>}
</span>

<style>
  .section-label {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    font-family: var(--font-body), 'Outfit', sans-serif;
    font-size: 0.6875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.25em;
    color: var(--accent);
  }

  .section-label__line {
    display: block;
    width: 2.5rem;
    height: 1px;
    background-color: var(--accent);
  }
</style>
