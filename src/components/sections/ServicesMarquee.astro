---
import Marquee from '../ui/Marquee.astro';

interface Props {
  services: string[];
}

const { services } = Astro.props;
---

<section class="services-marquee">
  <Marquee items={services} speed={25} />
</section>

<style>
  .services-marquee {
    padding: 2.5rem 0;
    background: var(--bg-primary);
  }

  .services-marquee :global(.marquee__item) {
    font-family: var(--font-body, 'Outfit', sans-serif);
    font-size: 2.25rem;
    font-weight: 400;
    color: var(--text-secondary);
    opacity: 0.6;
  }

  .services-marquee :global(.marquee__item:hover) {
    color: var(--accent);
    opacity: 1;
  }

  .services-marquee :global(.marquee__separator) {
    font-size: 1.5rem;
    color: var(--accent);
    opacity: 0.3;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .services-marquee {
      padding: 2rem 0;
    }

    .services-marquee :global(.marquee__item) {
      font-size: 1.5rem;
    }

    .services-marquee :global(.marquee__separator) {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .services-marquee :global(.marquee__item) {
      font-size: 1.25rem;
    }
  }
</style>
