---
import SectionLabel from '../ui/SectionLabel.astro';
import HighlightedText from '../ui/HighlightedText.astro';
import Button from '../ui/Button.astro';
import { urlFor } from '../../lib/sanity';
import type { SanityImageSource } from '@sanity/image-url/lib/types/types';
import { MoveRight } from '@lucide/astro';

interface ServiceItem {
  title: string;
  slug: { current: string };
  tagline?: string;
  iconCustom?: SanityImageSource;
  heroImage?: SanityImageSource;
}

interface Props {
  heading?: string;
  services?: ServiceItem[];
}

const {
  heading = 'Our *Services*',
  services: rawServices,
} = Astro.props;

const services = (rawServices || []).filter((s): s is ServiceItem => s != null && s.title != null);

function getIconUrl(icon: SanityImageSource | undefined): string | null {
  if (!icon) return null;
  try {
    return urlFor(icon).width(400).height(400).url();
  } catch {
    return null;
  }
}

function getHeroUrl(image: SanityImageSource | undefined): string | null {
  if (!image) return null;
  try {
    return urlFor(image).width(600).format('webp').url();
  } catch {
    return null;
  }
}
---

{services.length > 0 && (
  <section class="rsg">
    <div class="rsg__container">
      <div class="rsg__header">
        <div>
          <SectionLabel text="What We Do" />
          <h2 class="rsg__title"><HighlightedText text={heading} /></h2>
        </div>
        <Button variant="text" href="/services/">
          View All Services
        </Button>
      </div>

      <div class="rsg__grid">
        {services.map((service) => {
          const iconUrl = getIconUrl(service.iconCustom);
          const heroUrl = getHeroUrl(service.heroImage);
          return (
            <a href={`/services/${service.slug.current}/`} class="rsg-card">
              {/* Background hero image — reveals on hover */}
              {heroUrl && (
                <div
                  class="rsg-card__bg"
                  style={`background-image: url(${heroUrl}); view-transition-name: service-hero-${service.slug.current}`}
                ></div>
              )}
              <div class="rsg-card__overlay"></div>

              <div class="rsg-card__content">
                {iconUrl ? (
                  <img src={iconUrl} alt="" class="rsg-card__icon" loading="lazy" />
                ) : (
                  <span class="rsg-card__placeholder" aria-hidden="true">
                    {service.title.charAt(0).toUpperCase()}
                  </span>
                )}

                <h3 class="rsg-card__title" style={`view-transition-name: service-title-${service.slug.current}`}>{service.title}</h3>

                {service.tagline && (
                  <p class="rsg-card__tagline">{service.tagline}</p>
                )}

                <span class="rsg-card__link">
                  Explore <MoveRight size={16} />
                </span>
              </div>
            </a>
          );
        })}
      </div>
    </div>
  </section>
)}

<style>
  .rsg {
    padding: 6rem 0;
  }

  .rsg__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .rsg__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 3rem;
  }

  .rsg__title {
    margin-top: 1rem;
    margin-bottom: 0;
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 500;
    color: var(--text-primary);
  }

  /* Grid */
  .rsg__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  /* Card */
  .rsg-card {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    min-height: 280px;
    padding: 2rem;
    background-color: var(--bg-secondary);
    border: 1px solid var(--border);
    border-left: 3px solid transparent;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: border-color 0.3s ease, transform 0.3s ease;
  }

  .rsg-card:hover {
    border-left-color: var(--accent);
    transform: translateY(-4px);
  }

  .rsg-card:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
  }

  /* Background image */
  .rsg-card__bg {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .rsg-card:hover .rsg-card__bg {
    opacity: 0.18;
  }

  /* Gradient overlay */
  .rsg-card__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      var(--bg-secondary) 20%,
      transparent 80%
    );
    pointer-events: none;
    z-index: 1;
  }

  /* Content — grid rows keep titles aligned across cards */
  .rsg-card__content {
    position: relative;
    z-index: 2;
    display: grid;
    grid-template-rows: auto auto 1fr auto;
    height: 100%;
  }

  .rsg-card__icon {
    width: 80px;
    height: 80px;
    object-fit: contain;
    margin-bottom: 1.25rem;
    transition: transform 0.3s ease;
  }

  .rsg-card:hover .rsg-card__icon {
    transform: scale(1.08);
  }

  .rsg-card__placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    border-radius: 50%;
    border: 1px solid var(--border);
    background: var(--bg-primary);
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--accent);
    margin-bottom: 1.25rem;
  }

  .rsg-card__title {
    font-family: var(--font-display);
    font-size: 1.375rem;
    font-weight: 500;
    color: var(--text-primary);
    margin: 0 0 0.5rem 0;
    line-height: 1.2;
  }

  .rsg-card__tagline {
    font-family: var(--font-body);
    font-size: 0.9375rem;
    font-weight: 300;
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0;
    align-self: start;
  }

  .rsg-card__link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-body);
    font-size: 0.6875rem;
    font-weight: 400;
    letter-spacing: 2px;
    text-transform: uppercase;
    color: var(--accent);
    opacity: 0.7;
    transition: opacity 0.3s ease;
    align-self: end;
  }

  .rsg-card:hover .rsg-card__link {
    opacity: 1;
  }

  /* Responsive */
  @media (min-width: 640px) {
    .rsg__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 768px) {
    .rsg__header {
      margin-bottom: 4rem;
    }
  }

  @media (min-width: 1024px) {
    .rsg__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }

    .rsg-card {
      min-height: 320px;
    }

    .rsg-card__title {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .rsg {
      padding: 4rem 0;
    }

    .rsg__header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1.5rem;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .rsg-card,
    .rsg-card__bg,
    .rsg-card__icon,
    .rsg-card__link {
      transition: none;
    }
  }
</style>
