---
import SectionLabel from '../ui/SectionLabel.astro';
import HighlightedText from '../ui/HighlightedText.astro';

interface ProcessStep {
  stepNumber?: number;
  title?: string;
  description?: string;
  duration?: string;
  deliverables?: string[];
}

interface Props {
  heading?: string;
  steps?: ProcessStep[];
}

const {
  heading = 'How We *Work*',
  steps = [],
} = Astro.props;

const detailLabels = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ';
---

{steps && steps.length > 0 && (
  <section class="blueprint">
    <div class="blueprint__container">
      <div class="blueprint__header">
        <SectionLabel text="Our Process" />
        <h2 class="blueprint__title">
          <HighlightedText text={heading} />
        </h2>
      </div>

      <div class="blueprint__grid">
        {steps.map((step, index) => (
          <div class:list={['blueprint-card', index % 2 === 0 ? 'blueprint-card--left' : 'blueprint-card--right']}>
            <span class="blueprint-card__label">DETAIL {detailLabels[index] ?? String(index + 1)}</span>

            <div class="corner corner--tl" />
            <div class="corner corner--tr" />
            <div class="corner corner--bl" />
            <div class="corner corner--br" />

            <span class="blueprint-card__number">
              {String(step.stepNumber ?? index + 1).padStart(2, '0')}
            </span>

            <h3 class="blueprint-card__title">{step.title}</h3>
            <p class="blueprint-card__desc">{step.description}</p>

            {step.duration && (
              <span class="blueprint-card__duration">{step.duration}</span>
            )}

            {step.deliverables && step.deliverables.length > 0 && (
              <div class="spec-panel">
                <span class="spec-panel__label">Deliverables</span>
                <ul class="spec-panel__list">
                  {step.deliverables.map((item) => (
                    <li class="spec-panel__item">{item}</li>
                  ))}
                </ul>
                <div class="spec-panel__line" />
              </div>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>
)}

<style>
  .blueprint {
    padding: 6rem 0;
    background-color: var(--bg-primary);
    background-image:
      linear-gradient(rgba(201, 168, 124, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(201, 168, 124, 0.03) 1px, transparent 1px);
    background-size: 40px 40px;
  }

  .blueprint__container {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .blueprint__header {
    margin-bottom: 4rem;
  }

  .blueprint__title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 500;
    line-height: 1.1;
    color: var(--text-primary);
    margin-top: 1.5rem;
  }

  /* Grid */
  .blueprint__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  /* Card */
  .blueprint-card {
    position: relative;
    padding: 2.5rem;
    border: 1px dashed rgba(201, 168, 124, 0.15);
    background: transparent;
    transition: border-color 0.5s, box-shadow 0.5s;
  }

  .blueprint-card:hover {
    border-color: rgba(201, 168, 124, 0.4);
    box-shadow: 0 0 30px rgba(201, 168, 124, 0.05);
  }

  /* Detail label */
  .blueprint-card__label {
    position: absolute;
    top: -10px;
    left: 20px;
    background: var(--bg-primary);
    padding: 0 12px;
    font-family: var(--font-body);
    font-size: 10px;
    font-weight: 700;
    letter-spacing: 3px;
    color: var(--accent);
    text-transform: uppercase;
  }

  /* Corner brackets */
  .corner {
    position: absolute;
  }

  .corner::before,
  .corner::after {
    content: '';
    position: absolute;
    background: var(--accent);
    opacity: 0.3;
    transition: opacity 0.5s;
  }

  .blueprint-card:hover .corner::before,
  .blueprint-card:hover .corner::after {
    opacity: 0.7;
  }

  .corner--tl { top: -1px; left: -1px; }
  .corner--tl::before { width: 12px; height: 1px; top: 0; left: 0; }
  .corner--tl::after { width: 1px; height: 12px; top: 0; left: 0; }

  .corner--tr { top: -1px; right: -1px; }
  .corner--tr::before { width: 12px; height: 1px; top: 0; right: 0; }
  .corner--tr::after { width: 1px; height: 12px; top: 0; right: 0; }

  .corner--bl { bottom: -1px; left: -1px; }
  .corner--bl::before { width: 12px; height: 1px; bottom: 0; left: 0; }
  .corner--bl::after { width: 1px; height: 12px; bottom: 0; left: 0; }

  .corner--br { bottom: -1px; right: -1px; }
  .corner--br::before { width: 12px; height: 1px; bottom: 0; right: 0; }
  .corner--br::after { width: 1px; height: 12px; bottom: 0; right: 0; }

  /* Ghost number */
  .blueprint-card__number {
    display: block;
    font-family: var(--font-display);
    font-size: 48px;
    font-weight: 700;
    color: transparent;
    -webkit-text-stroke: 1px rgba(201, 168, 124, 0.1);
    line-height: 1;
    margin-bottom: 1rem;
    transition: -webkit-text-stroke-color 0.5s;
  }

  .blueprint-card:hover .blueprint-card__number {
    -webkit-text-stroke-color: rgba(201, 168, 124, 0.25);
  }

  /* Title */
  .blueprint-card__title {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
    line-height: 1.2;
  }

  /* Description */
  .blueprint-card__desc {
    font-family: var(--font-body);
    font-size: 1rem;
    font-weight: 300;
    line-height: 1.7;
    color: var(--text-secondary);
  }

  /* Duration dimension line */
  .blueprint-card__duration {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    margin-top: 1.25rem;
    font-family: var(--font-body);
    font-size: 10px;
    color: var(--accent);
    opacity: 0.5;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .blueprint-card__duration::before,
  .blueprint-card__duration::after {
    content: '';
    display: block;
    width: 20px;
    height: 1px;
    background: var(--accent);
  }

  /* Spec panel */
  .spec-panel {
    position: absolute;
    top: 50%;
    transform: translateY(-50%) translateX(10px);
    width: 160px;
    padding: 16px;
    background: rgba(15, 15, 15, 0.95);
    border: 1px solid rgba(201, 168, 124, 0.2);
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.5s, transform 0.5s;
    z-index: 10;
  }

  .blueprint-card--left .spec-panel {
    right: -180px;
    left: auto;
  }

  .blueprint-card--right .spec-panel {
    left: -180px;
    right: auto;
  }

  .blueprint-card:hover .spec-panel {
    opacity: 1;
    transform: translateY(-50%) translateX(0);
  }

  /* Spec panel annotation line */
  .spec-panel__line {
    position: absolute;
    top: 50%;
    width: 18px;
    height: 1px;
    background: rgba(201, 168, 124, 0.3);
  }

  .blueprint-card--left .spec-panel__line {
    left: -18px;
  }

  .blueprint-card--right .spec-panel__line {
    right: -18px;
  }

  .spec-panel__label {
    display: block;
    font-family: var(--font-body);
    font-size: 9px;
    font-weight: 700;
    letter-spacing: 2px;
    text-transform: uppercase;
    color: var(--accent);
    margin-bottom: 10px;
  }

  .spec-panel__list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .spec-panel__item {
    font-family: var(--font-body);
    font-size: 11px;
    font-weight: 300;
    color: var(--text-secondary);
    line-height: 1.4;
    padding-left: 10px;
    position: relative;
  }

  .spec-panel__item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 6px;
    width: 3px;
    height: 3px;
    background: var(--accent);
    opacity: 0.5;
  }

  /* Responsive: Tablet */
  @media (max-width: 1024px) {
    .blueprint__grid {
      grid-template-columns: 1fr;
      max-width: 600px;
    }

    .spec-panel {
      display: none;
    }
  }

  /* Responsive: Mobile */
  @media (max-width: 768px) {
    .blueprint {
      padding: 4rem 0;
    }

    .blueprint__header {
      margin-bottom: 3rem;
    }

    .blueprint-card {
      padding: 2rem 1.5rem;
    }

    .blueprint-card__number {
      font-size: 36px;
    }

    .blueprint-card__title {
      font-size: 1.25rem;
    }
  }

  @media (max-width: 480px) {
    .blueprint {
      padding: 3rem 0;
    }

    .blueprint-card {
      padding: 1.5rem 1.25rem;
    }

    .blueprint-card__desc {
      font-size: 0.9375rem;
    }
  }
</style>
