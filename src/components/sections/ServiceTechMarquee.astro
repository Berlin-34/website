---
import SectionLabel from '../ui/SectionLabel.astro';
import HighlightedText from '../ui/HighlightedText.astro';
import Marquee from '../ui/Marquee.astro';

interface Props {
  heading?: string;
  technologies?: string[];
}

const {
  heading = 'Our *Toolkit*',
  technologies = [],
} = Astro.props;
---

{technologies && technologies.length > 0 && (
  <section class="service-tech">
    <div class="service-tech__container">
      <div class="service-tech__header">
        <SectionLabel text="Tools & Technologies" />
        <h2 class="service-tech__title">
          <HighlightedText text={heading} />
        </h2>
      </div>
    </div>

    <Marquee items={technologies} speed={30} />
  </section>
)}

<style>
  .service-tech {
    padding: 6rem 0;
    background: var(--bg-secondary);
    overflow: hidden;
  }

  .service-tech__container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .service-tech__header {
    margin-bottom: 3rem;
  }

  .service-tech__title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 500;
    line-height: 1.1;
    color: var(--text-primary);
    margin-top: 1.5rem;
  }

  /* Marquee item styling */
  .service-tech :global(.marquee__item) {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 3.5rem);
    font-weight: 500;
    color: var(--text-muted);
    opacity: 0.35;
  }

  .service-tech :global(.marquee__item:hover) {
    color: var(--accent);
    opacity: 1;
  }

  .service-tech :global(.marquee__separator) {
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    color: var(--accent);
    opacity: 0.25;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .service-tech {
      padding: 4rem 0;
    }

    .service-tech__header {
      margin-bottom: 2rem;
    }
  }

  @media (max-width: 480px) {
    .service-tech {
      padding: 3rem 0;
    }
  }
</style>
