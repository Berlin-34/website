---
import SectionLabel from '../ui/SectionLabel.astro';
import Button from '../ui/Button.astro';
import HighlightedText from '../ui/HighlightedText.astro';

interface Props {
  tagline: string;
  headline: string;
  description: string;
  imageUrl?: string;
}

const { tagline, headline, description, imageUrl } = Astro.props;

const heroImage = imageUrl || '/hero.png';
---

<section class="hero">
  <div class="hero__background">
    <img
      src={heroImage}
      alt=""
      class="hero__image"
      loading="eager"
      decoding="async"
    />
  </div>

  <div class="hero__container">
    <div class="hero__content">
      <SectionLabel text={tagline} class="hero__label" />

      <h1 class="hero__headline">
        <HighlightedText text={headline} />
      </h1>

      <p class="hero__description">{description}</p>

      <div class="hero__actions">
        <Button href="/contact/" variant="primary">Start a Project</Button>
        <Button href="/work/" variant="text">View Our Work</Button>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  /* Full-bleed background image */
  .hero__background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  /* Subtle black overlay for text readability */
  .hero__background::after {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(10, 10, 10, 0.5);
    pointer-events: none;
  }

  /* Content overlay */
  .hero__container {
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: 1440px;
    margin: 0 auto;
    padding: 6rem 1.5rem 3rem;
  }

  .hero__content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    max-width: 600px;
  }

  .hero__label {
    margin-bottom: 0.5rem;
  }

  .hero__headline {
    font-family: var(--font-display), 'Playfair Display', serif;
    font-size: clamp(2.5rem, 8vw, 5.5rem);
    font-weight: 500;
    line-height: 1.05;
    color: var(--text-primary);
    margin: 0;
  }

  .hero__description {
    font-family: var(--font-body), 'Outfit', sans-serif;
    font-size: 1rem;
    font-weight: 300;
    line-height: 1.7;
    color: var(--text-on-image);
    margin: 0;
    max-width: 480px;
  }

  .hero__actions {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 1.5rem;
    margin-top: 1rem;
  }

  /* Mobile adjustments */
  @media (max-width: 767px) {
    .hero__background::after {
      background: rgba(10, 10, 10, 0.6);
    }

    .hero__image {
      object-position: center;
    }

    .hero__content {
      padding-top: 2rem;
    }
  }

  /* Tablet: 768px+ */
  @media (min-width: 768px) {
    .hero__container {
      padding: 8rem 2.5rem 4rem;
    }

    .hero__content {
      gap: 1.75rem;
    }

    .hero__description {
      font-size: 1.0625rem;
    }

    .hero__image {
      object-position: center;
    }
  }

  /* Desktop: 1024px+ */
  @media (min-width: 1024px) {
    .hero__container {
      padding: 0 3rem;
      display: flex;
      align-items: center;
      min-height: 100vh;
    }

    .hero__content {
      gap: 2rem;
      max-width: 640px;
    }

    .hero__description {
      font-size: 1.125rem;
      max-width: 520px;
    }

    .hero__actions {
      gap: 2rem;
      margin-top: 1.5rem;
    }
  }

  /* Large Desktop: 1280px+ */
  @media (min-width: 1280px) {
    .hero__container {
      padding: 0 5rem;
    }

    .hero__content {
      max-width: 700px;
    }
  }

  /* Extra Large: 1440px+ */
  @media (min-width: 1440px) {
    .hero__content {
      max-width: 750px;
    }
  }
</style>
