---
import PageHero from './PageHero.astro';
import SectionLabel from '../ui/SectionLabel.astro';
import Button from '../ui/Button.astro';
import HighlightedText from '../ui/HighlightedText.astro';
import heroImage from '../../assets/hero.png';

interface Props {
  tagline: string;
  headline: string;
  description: string;
}

const { tagline, headline, description } = Astro.props;
---

<PageHero image={heroImage}>
  <SectionLabel text={tagline} />

  <h1>
    <HighlightedText text={headline} />
  </h1>

  <p class="page-hero__description">{description}</p>

  <div class="page-hero__actions">
    <Button href="/contact/" variant="primary">Start a Project</Button>
    <Button href="/work/" variant="text">View Our Work</Button>
  </div>
</PageHero>
