---
import SectionLabel from '../ui/SectionLabel.astro';
import HighlightedText from '../ui/HighlightedText.astro';
import { urlFor } from '../../lib/sanity';
import type { SanityImageSource } from '@sanity/image-url/lib/types/types';
import {
  Heart,
  ShoppingCart,
  Factory,
  Truck,
  Landmark,
  Rocket,
  Building2,
  Briefcase,
  GraduationCap,
  Utensils,
  Plane,
  Home,
  Stethoscope,
  Package,
  BarChart3,
  Cpu,
  Leaf,
  Car,
  MoveRight,
} from '@lucide/astro';

interface Props {
  industries: Array<{
    title: string;
    slug: { current: string };
    iconName?: string;
    iconCustom?: SanityImageSource;
  }>;
}

const { industries } = Astro.props;

// Map of Lucide icon names to components
const lucideIcons: Record<string, typeof Heart> = {
  'heart': Heart,
  'stethoscope': Stethoscope,
  'shopping-cart': ShoppingCart,
  'factory': Factory,
  'truck': Truck,
  'package': Package,
  'landmark': Landmark,
  'bar-chart-3': BarChart3,
  'rocket': Rocket,
  'building-2': Building2,
  'briefcase': Briefcase,
  'graduation-cap': GraduationCap,
  'utensils': Utensils,
  'plane': Plane,
  'home': Home,
  'cpu': Cpu,
  'leaf': Leaf,
  'car': Car,
};

/**
 * Gets the first letter of the industry title as a placeholder
 */
function getInitial(title: string | null | undefined): string {
  if (!title) return '?';
  return title.charAt(0).toUpperCase();
}

/**
 * Get custom icon URL from Sanity image
 */
function getCustomIconUrl(icon: SanityImageSource | undefined): string | null {
  if (!icon) return null;
  try {
    return urlFor(icon).width(150).height(150).format('webp').url();
  } catch {
    return null;
  }
}

/**
 * Get Lucide icon component by name
 */
function getLucideIcon(name: string | undefined): typeof Heart | null {
  if (!name) return null;
  const normalized = name.toLowerCase().trim();
  return lucideIcons[normalized] || null;
}
---

<section class="industries">
  <div class="industries__container">
    <header class="industries__header">
      <SectionLabel text="Our Expertise" />
      <h2 class="industries__title"><HighlightedText text="*Industries* We Serve" /></h2>
    </header>

    <ul class="industries__list">
      {industries?.map((industry) => {
        const customIconUrl = getCustomIconUrl(industry.iconCustom);
        const LucideIcon = getLucideIcon(industry.iconName);
        return (
          <li class="industries__item">
            <a
              href={`/industries/${industry.slug?.current || '#'}/`}
              class="industry-link"
            >
              <span class="industry-link__icon" aria-hidden="true">
                {customIconUrl ? (
                  <img
                    src={customIconUrl}
                    alt=""
                    width="44"
                    height="44"
                    loading="lazy"
                  />
                ) : LucideIcon ? (
                  <LucideIcon size={40} />
                ) : (
                  getInitial(industry.title)
                )}
              </span>
              <span class="industry-link__text">
                <span class="industry-link__name">
                  {industry.title || 'Industry'}
                </span>
                <span class="industry-link__arrow" aria-hidden="true">
                  <MoveRight size={18} />
                </span>
              </span>
            </a>
          </li>
        );
      })}
    </ul>
  </div>
</section>

<style>
  .industries {
    padding: 6rem 0;
  }

  @media (max-width: 768px) {
    .industries {
      padding: 4rem 0;
    }
  }

  @media (max-width: 480px) {
    .industries {
      padding: 3rem 0;
    }
  }

  .industries__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .industries__header {
    margin-bottom: 3rem;
  }

  .industries__title {
    margin-top: 1rem;
    margin-bottom: 0;
    font-family: var(--font-display, 'Playfair Display', serif);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 500;
    color: var(--text-primary);
  }

  .industries__list {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  /* Industry Link Item */
  .industry-link {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem 0;
    transition: color 0.3s ease;
  }

  .industry-link:hover {
    color: var(--accent);
  }

  .industry-link:hover .industry-link__icon {
    border-color: var(--accent);
    transform: scale(1.1);
  }

  .industry-link:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: 4px;
    border-radius: 2px;
  }

  .industry-link__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 4.5rem;
    height: 4.5rem;
    flex-shrink: 0;
    border-radius: 50%;
    border: 1px solid var(--border-light);
    background-color: var(--bg-secondary);
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--text-primary);
    transition: border-color 0.3s ease, transform 0.3s ease;
    overflow: hidden;
  }

  .industry-link__icon img {
    width: 44px;
    height: 44px;
    object-fit: contain;
  }

  .industry-link__text {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .industry-link__name {
    font-family: var(--font-body);
    font-size: 1rem;
    font-weight: 400;
    line-height: 1;
    color: var(--text-primary);
    transition: color 0.3s ease;
  }

  .industry-link__arrow {
    display: flex;
    align-items: center;
    opacity: 0;
    transform: translateX(-8px);
    color: var(--accent);
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .industry-link:hover .industry-link__name {
    color: var(--accent);
  }

  .industry-link:hover .industry-link__arrow {
    opacity: 1;
    transform: translateX(0);
  }

  /* Tablet: 2 columns */
  @media (min-width: 640px) {
    .industries__list {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Desktop: 3 columns */
  @media (min-width: 1024px) {
    .industries__list {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .industry-link,
    .industry-link__icon,
    .industry-link__name,
    .industry-link__arrow {
      transition: none;
    }
  }
</style>
