---
import SectionLabel from '../ui/SectionLabel.astro';
import HighlightedText from '../ui/HighlightedText.astro';

interface Props {
  label?: string;
  headline?: string;
  description?: string;
}

const {
  label = "About Us",
  headline = "Who We Are",
  description = "A premium digital product studio crafting exceptional experiences for ambitious brands."
} = Astro.props;
---

<section class="about-hero">
  <div class="about-hero__container">
    <SectionLabel text={label} />
    <h1 class="about-hero__headline">
      <HighlightedText text={headline} />
    </h1>
    <p class="about-hero__description">{description}</p>
  </div>
</section>

<style>
  .about-hero {
    padding: 10rem 0 6rem;
    background: var(--bg-primary);
  }

  .about-hero__container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 1.5rem;
    text-align: center;
  }

  .about-hero__headline {
    font-family: var(--font-display), 'Playfair Display', serif;
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 500;
    line-height: 1.1;
    color: var(--text-primary);
    margin: 1.5rem 0;
  }

  .about-hero__description {
    font-family: var(--font-body), 'Outfit', sans-serif;
    font-size: clamp(1.125rem, 2vw, 1.25rem);
    font-weight: 300;
    line-height: 1.7;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .about-hero {
      padding: 8rem 0 4rem;
    }
  }
</style>
