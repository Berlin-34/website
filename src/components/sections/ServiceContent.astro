---
import SectionLabel from '../ui/SectionLabel.astro';
import HighlightedText from '../ui/HighlightedText.astro';
import PortableTextImage from '../ui/PortableTextImage.astro';
import PortableTextHighlight from '../ui/PortableTextHighlight.astro';
import { PortableText } from 'astro-portabletext';

interface Props {
  heading?: string;
  content?: any[];
}

const {
  heading = 'What We *Do*',
  content = [],
} = Astro.props;

const components = {
  type: {
    image: PortableTextImage,
  },
  mark: {
    highlight: PortableTextHighlight,
  },
};
---

{content && content.length > 0 && (
  <section class="service-content">
    <div class="service-content__container">
      <SectionLabel text="What We Do" />
      <h2 class="service-content__title">
        <HighlightedText text={heading} />
      </h2>
      <div class="service-content__body">
        <PortableText value={content} components={components} />
      </div>
    </div>
  </section>
)}

<style>
  .service-content {
    padding: 6rem 0;
    background: var(--bg-secondary);
  }

  .service-content__container {
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .service-content__title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 500;
    line-height: 1.1;
    color: var(--text-primary);
    margin: 1.5rem 0 3rem;
  }

  .service-content__body {
    font-family: var(--font-body);
    font-size: 1.125rem;
    font-weight: 300;
    line-height: 1.8;
    color: var(--text-secondary);
  }

  .service-content__body :global(p) {
    margin-bottom: 1.5rem;
  }

  .service-content__body :global(p:last-child) {
    margin-bottom: 0;
  }

  .service-content__body :global(strong) {
    font-weight: 500;
    color: var(--text-primary);
  }

  .service-content__body :global(a) {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 4px;
    transition: color 0.2s;
  }

  .service-content__body :global(a:hover) {
    color: var(--accent-light);
  }

  .service-content__body :global(ul) {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
    list-style: none;
  }

  .service-content__body :global(ol) {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
    list-style: decimal;
    color: var(--accent);
  }

  .service-content__body :global(ol > li) {
    padding-left: 0.5rem;
    color: var(--text-secondary);
  }

  .service-content__body :global(li) {
    margin-bottom: 0.5rem;
  }

  .service-content__body :global(ul > li) {
    position: relative;
    padding-left: 1.25rem;
  }

  .service-content__body :global(ul > li::before) {
    content: '';
    position: absolute;
    left: 0;
    top: 0.7em;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--accent);
  }

  .service-content__body :global(h2),
  .service-content__body :global(h3) {
    font-family: var(--font-display);
    font-weight: 500;
    color: var(--text-primary);
    margin: 2.5rem 0 1rem;
    line-height: 1.2;
  }

  .service-content__body :global(h2) {
    font-size: 1.75rem;
  }

  .service-content__body :global(h3) {
    font-size: 1.375rem;
  }

  .service-content__body :global(.portable-text-image) {
    margin: 2.5rem 0;
  }

  .service-content__body :global(.portable-text-image img) {
    width: 100%;
    height: auto;
    border: 1px solid var(--border-light);
  }

  .service-content__body :global(.portable-text-image figcaption) {
    font-size: 0.8125rem;
    color: var(--text-muted);
    margin-top: 0.75rem;
    font-style: italic;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .service-content {
      padding: 4rem 0;
    }

    .service-content__title {
      margin: 1rem 0 2rem;
    }

    .service-content__body {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .service-content {
      padding: 3rem 0;
    }
  }
</style>
