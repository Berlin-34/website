---
import SectionLabel from '../ui/SectionLabel.astro';
import HighlightedText from '../ui/HighlightedText.astro';

interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  heading?: string;
  description?: string;
  faqs?: FAQItem[];
}

const {
  heading = 'Common *Questions*',
  description = 'Everything you need to know about working with us.',
  faqs = [],
} = Astro.props;
---

{faqs && faqs.length > 0 && (
  <section class="service-faq">
    <div class="service-faq__container">
      <div class="service-faq__layout">
        {/* Left: Sticky header */}
        <div class="service-faq__sidebar">
          <SectionLabel text="FAQ" />
          <h2 class="service-faq__title">
            <HighlightedText text={heading} />
          </h2>
          <p class="service-faq__description">{description}</p>
        </div>

        {/* Right: FAQ items */}
        <div class="service-faq__list">
          {faqs.map((faq, index) => (
            <details class="faq-item" open={index === 0}>
              <summary class="faq-item__question">
                <span>{faq.question}</span>
                <svg
                  class="faq-item__chevron"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  width="20"
                  height="20"
                  aria-hidden="true"
                >
                  <path d="M6 9l6 6 6-6" />
                </svg>
              </summary>
              <div class="faq-item__answer">
                <p>{faq.answer}</p>
              </div>
            </details>
          ))}
        </div>
      </div>
    </div>
  </section>
)}

<style>
  .service-faq {
    padding: 6rem 0;
    background: var(--bg-secondary);
  }

  .service-faq__container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Two-column layout */
  .service-faq__layout {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 4rem;
    align-items: start;
  }

  /* Sticky sidebar */
  .service-faq__sidebar {
    position: sticky;
    top: 6rem;
  }

  .service-faq__title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 500;
    line-height: 1.1;
    color: var(--text-primary);
    margin: 1.5rem 0;
  }

  .service-faq__description {
    font-family: var(--font-body);
    font-size: 1rem;
    font-weight: 300;
    line-height: 1.7;
    color: var(--text-secondary);
  }

  /* FAQ Items */
  .service-faq__list {
    display: flex;
    flex-direction: column;
  }

  .faq-item {
    border-bottom: 1px solid var(--border);
  }

  .faq-item:first-child {
    border-top: 1px solid var(--border);
  }

  .faq-item__question {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem 0;
    cursor: pointer;
    list-style: none;
    font-family: var(--font-display);
    font-size: 1.125rem;
    font-weight: 500;
    color: var(--text-primary);
    transition: color 0.3s ease;
  }

  .faq-item__question::-webkit-details-marker {
    display: none;
  }

  .faq-item__question::marker {
    display: none;
    content: '';
  }

  .faq-item__question:hover {
    color: var(--accent);
  }

  .faq-item__question:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
  }

  .faq-item__chevron {
    flex-shrink: 0;
    color: var(--text-secondary);
    transition: transform 0.3s ease;
  }

  .faq-item[open] .faq-item__chevron {
    transform: rotate(180deg);
  }

  .faq-item__answer {
    padding-bottom: 1.5rem;
  }

  .faq-item__answer p {
    font-family: var(--font-body);
    font-size: 1rem;
    font-weight: 300;
    line-height: 1.7;
    color: var(--text-secondary);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .service-faq__layout {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .service-faq__sidebar {
      position: static;
    }
  }

  @media (max-width: 768px) {
    .service-faq {
      padding: 4rem 0;
    }

    .faq-item__question {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .service-faq {
      padding: 3rem 0;
    }

    .faq-item__question {
      padding: 1.25rem 0;
    }
  }
</style>
