---
import PageHero from './PageHero.astro';
import SectionLabel from '../ui/SectionLabel.astro';
import HighlightedText from '../ui/HighlightedText.astro';

interface Props {
  label?: string;
  headline?: string;
  description?: string;
}

const {
  label = "Get In Touch",
  headline = "Let's Build Something *Great*",
  description = "We're ready to bring your vision to life. Tell us about your project and let's create something extraordinary together."
} = Astro.props;
---

<PageHero variant="inner">
  <SectionLabel text={label} />

  <h1>
    <HighlightedText text={headline} />
  </h1>

  <p class="page-hero__description">{description}</p>
</PageHero>
