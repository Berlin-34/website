---
import SectionLabel from '../ui/SectionLabel.astro';
import { urlFor } from '../../lib/sanity';
import type { SanityImageSource } from '@sanity/image-url/lib/types/types';
import {
  PenTool,
  Code,
  Smartphone,
  Layers,
  BarChart3,
  Globe,
  Megaphone,
  Database,
  Server,
  Palette,
  Layout,
  Monitor,
  Cpu,
  Cloud,
  ShoppingCart,
  Cog,
  MoveRight,
} from '@lucide/astro';

interface Props {
  services: Array<{
    title: string;
    slug: { current: string };
    shortDescription: string;
    iconName?: string;
    iconCustom?: SanityImageSource;
  }>;
}

const { services } = Astro.props;

// Map of Lucide icon names to components
const lucideIcons: Record<string, typeof PenTool> = {
  'pen-tool': PenTool,
  'code': Code,
  'smartphone': Smartphone,
  'layers': Layers,
  'bar-chart-3': BarChart3,
  'globe': Globe,
  'megaphone': Megaphone,
  'database': Database,
  'server': Server,
  'palette': Palette,
  'layout': Layout,
  'monitor': Monitor,
  'cpu': Cpu,
  'cloud': Cloud,
  'shopping-cart': ShoppingCart,
  'cog': Cog,
};

/**
 * Gets the first letter of the service title as a placeholder
 */
function getInitial(title: string | null | undefined): string {
  if (!title) return '?';
  return title.charAt(0).toUpperCase();
}

/**
 * Get custom icon URL from Sanity image
 */
function getCustomIconUrl(icon: SanityImageSource | undefined): string | null {
  if (!icon) return null;
  try {
    return urlFor(icon).width(150).height(150).format('webp').url();
  } catch {
    return null;
  }
}

/**
 * Get Lucide icon component by name
 */
function getLucideIcon(name: string | undefined): typeof PenTool | null {
  if (!name) return null;
  const normalized = name.toLowerCase().trim();
  return lucideIcons[normalized] || null;
}
---

<section class="services-grid">
  <div class="services-grid__container">
    <header class="services-grid__header">
      <SectionLabel text="What We Do" />
      <h2 class="services-grid__title">Our Services</h2>
    </header>

    <div class="services-grid__cards">
      {services.map((service) => {
        const customIconUrl = getCustomIconUrl(service.iconCustom);
        const LucideIcon = getLucideIcon(service.iconName);
        return (
          <a
            href={`/services/${service.slug.current}/`}
            class="service-card"
          >
            <span class="service-card__icon" aria-hidden="true">
              {customIconUrl ? (
                <img
                  src={customIconUrl}
                  alt=""
                  width="44"
                  height="44"
                  loading="lazy"
                />
              ) : LucideIcon ? (
                <LucideIcon size={40} />
              ) : (
                getInitial(service.title)
              )}
            </span>
            <h3 class="service-card__title">
              {service.title}
            </h3>
            <p class="service-card__description">
              {service.shortDescription}
            </p>
            <span class="service-card__arrow" aria-hidden="true">
              <MoveRight size={20} />
            </span>
          </a>
        );
      })}
    </div>
  </div>
</section>

<style>
  .services-grid {
    padding: 6rem 0;
  }

  .services-grid__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .services-grid__header {
    margin-bottom: 3rem;
  }

  .services-grid__title {
    margin-top: 1rem;
    margin-bottom: 0;
    font-family: var(--font-display, 'Playfair Display', serif);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 500;
    color: var(--text-primary);
  }

  .services-grid__cards {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  /* Service Card */
  .service-card {
    display: block;
    padding: 2rem;
    background-color: var(--bg-secondary);
    border: 1px solid var(--border);
    border-left: 3px solid transparent;
    transition: border-color 0.3s ease, transform 0.3s ease;
  }

  .service-card:hover {
    border-left-color: var(--accent);
    transform: translateY(-2px);
  }

  .service-card:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
  }

  .service-card__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 4.5rem;
    height: 4.5rem;
    margin-bottom: 1.5rem;
    border-radius: 50%;
    border: 1px solid var(--border-light);
    background-color: var(--bg-primary);
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--text-primary);
    transition: border-color 0.3s ease, transform 0.3s ease;
    overflow: hidden;
  }

  .service-card:hover .service-card__icon {
    border-color: var(--accent);
    transform: scale(1.1);
  }

  .service-card__icon img {
    width: 44px;
    height: 44px;
    object-fit: contain;
  }

  .service-card__title {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--text-primary);
    margin: 0 0 0.75rem 0;
    line-height: 1.2;
  }

  .service-card__description {
    font-family: var(--font-body);
    font-size: 1rem;
    font-weight: 300;
    color: var(--text-secondary);
    margin: 0;
    line-height: 1.6;
  }

  .service-card__arrow {
    display: flex;
    align-items: center;
    margin-top: 1.5rem;
    opacity: 0;
    transform: translateX(-8px);
    color: var(--accent);
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .service-card:hover .service-card__arrow {
    opacity: 1;
    transform: translateX(0);
  }

  /* Tablet: 2 columns */
  @media (min-width: 640px) {
    .services-grid__cards {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Desktop: 3 columns */
  @media (min-width: 1024px) {
    .services-grid__cards {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .service-card,
    .service-card__icon,
    .service-card__arrow {
      transition: none;
    }
  }
</style>
