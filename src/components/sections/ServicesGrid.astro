---
import SectionLabel from '../ui/SectionLabel.astro';
import HighlightedText from '../ui/HighlightedText.astro';
import { urlFor } from '../../lib/sanity';
import type { SanityImageSource } from '@sanity/image-url/lib/types/types';
import { MoveRight } from '@lucide/astro';

interface Props {
  services: Array<{
    title: string;
    slug: { current: string };
    tagline?: string;
    iconCustom?: SanityImageSource;
  }>;
}

const { services } = Astro.props;

/**
 * Get custom icon URL from Sanity image (larger size for new design)
 */
function getCustomIconUrl(icon: SanityImageSource | undefined): string | null {
  if (!icon) return null;
  try {
    // Larger size for the new card design - transparent PNG
    return urlFor(icon).width(300).height(300).url();
  } catch {
    return null;
  }
}
---

<section class="services-grid">
  <div class="services-grid__container">
    <header class="services-grid__header">
      <SectionLabel text="What We Do" />
      <h2 class="services-grid__title"><HighlightedText text="Our *Services*" /></h2>
    </header>

    <div class="services-grid__cards">
      {services.map((service) => {
        const customIconUrl = getCustomIconUrl(service.iconCustom);
        return (
          <a
            href={`/services/${service.slug.current}/`}
            class="service-card"
          >
            <div class="service-card__content">
              <h3 class="service-card__title">
                {service.title}
              </h3>
              {service.tagline && (
                <p class="service-card__tagline">
                  {service.tagline}
                </p>
              )}
              <span class="service-card__arrow" aria-hidden="true">
                <MoveRight size={20} />
              </span>
            </div>

            <div class="service-card__visual">
              {customIconUrl ? (
                <img
                  src={customIconUrl}
                  alt=""
                  class="service-card__icon"
                  loading="lazy"
                />
              ) : (
                <span class="service-card__placeholder" aria-hidden="true">
                  {service.title.charAt(0).toUpperCase()}
                </span>
              )}
            </div>
          </a>
        );
      })}
    </div>
  </div>
</section>

<style>
  .services-grid {
    padding: 6rem 0;
  }

  .services-grid__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .services-grid__header {
    margin-bottom: 3rem;
  }

  .services-grid__title {
    margin-top: 1rem;
    margin-bottom: 0;
    font-family: var(--font-display, 'Playfair Display', serif);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 500;
    color: var(--text-primary);
  }

  .services-grid__cards {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  /* Service Card - New horizontal split layout */
  .service-card {
    display: flex;
    flex-direction: column;
    background-color: var(--bg-secondary);
    border: 1px solid var(--border);
    border-left: 3px solid transparent;
    overflow: hidden;
    transition: border-color 0.3s ease, transform 0.3s ease;
  }

  .service-card:hover {
    border-left-color: var(--accent);
    transform: translateY(-2px);
  }

  .service-card:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
  }

  /* Left side - Text content */
  .service-card__content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 2rem;
    order: 1;
  }

  .service-card__title {
    font-family: var(--font-display);
    font-size: 1.375rem;
    font-weight: 500;
    color: var(--text-primary);
    margin: 0 0 0.75rem 0;
    line-height: 1.2;
  }

  .service-card__tagline {
    font-family: var(--font-body);
    font-size: 0.9375rem;
    font-weight: 300;
    color: var(--text-secondary);
    margin: 0;
    line-height: 1.6;
  }

  .service-card__arrow {
    display: flex;
    align-items: center;
    margin-top: 1.25rem;
    color: var(--accent);
    opacity: 0.6;
    transform: translateX(0);
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .service-card:hover .service-card__arrow {
    opacity: 1;
    transform: translateX(4px);
  }

  /* Right side - Visual/Icon */
  .service-card__visual {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1.5rem;
    order: 2;
    background: linear-gradient(
      135deg,
      rgba(201, 168, 124, 0.03) 0%,
      transparent 50%
    );
  }

  .service-card__icon {
    width: 100%;
    max-width: 120px;
    height: auto;
    object-fit: contain;
    transition: transform 0.4s ease;
  }

  .service-card:hover .service-card__icon {
    transform: scale(1.05);
  }

  .service-card__placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    border-radius: 50%;
    border: 1px solid var(--border-light);
    background-color: var(--bg-primary);
    font-family: var(--font-display);
    font-size: 2rem;
    font-weight: 500;
    color: var(--accent);
    transition: border-color 0.3s ease;
  }

  .service-card:hover .service-card__placeholder {
    border-color: var(--accent);
  }

  /* Tablet: Horizontal layout */
  @media (min-width: 640px) {
    .services-grid__cards {
      grid-template-columns: repeat(2, 1fr);
    }

    .service-card {
      flex-direction: row;
      min-height: 200px;
    }

    .service-card__content {
      flex: 1;
      order: 1;
      padding: 1.75rem;
    }

    .service-card__visual {
      flex: 0 0 40%;
      order: 2;
      padding: 1.5rem;
    }

    .service-card__icon {
      max-width: 140px;
    }
  }

  /* Desktop: 2 columns, larger cards */
  @media (min-width: 1024px) {
    .services-grid__cards {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }

    .service-card {
      min-height: 220px;
    }

    .service-card__content {
      padding: 2rem;
    }

    .service-card__title {
      font-size: 1.5rem;
    }

    .service-card__tagline {
      font-size: 1rem;
    }

    .service-card__visual {
      flex: 0 0 45%;
    }

    .service-card__icon {
      max-width: 160px;
    }
  }

  /* Large Desktop */
  @media (min-width: 1280px) {
    .service-card__content {
      padding: 2.5rem;
    }

    .service-card__icon {
      max-width: 180px;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .service-card,
    .service-card__icon,
    .service-card__arrow,
    .service-card__placeholder {
      transition: none;
    }
  }
</style>
