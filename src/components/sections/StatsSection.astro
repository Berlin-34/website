---
import SectionLabel from '../ui/SectionLabel.astro';

interface Props {
  stats: Array<{
    value: string;
    label: string;
  }>;
}

const { stats } = Astro.props;
---

<section class="stats-section">
  <div class="stats-section__container">
    <header class="stats-section__header">
      <SectionLabel text="By The Numbers" />
      <h2 class="stats-section__title">Our Impact</h2>
    </header>

    <div class="stats-section__grid">
      {stats.map((stat) => (
        <div class="stat-item">
          <span class="stat-item__value">{stat.value}</span>
          <span class="stat-item__label">{stat.label}</span>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .stats-section {
    padding: 5rem 0;
  }

  .stats-section__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .stats-section__header {
    margin-bottom: 3rem;
  }

  .stats-section__title {
    margin-top: 1rem;
    margin-bottom: 0;
    font-family: var(--font-display, 'Playfair Display', serif);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 500;
    color: var(--text-primary);
  }

  .stats-section__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2.5rem;
  }

  /* Stat Item */
  .stat-item {
    display: flex;
    align-items: baseline;
    gap: 1rem;
  }

  .stat-item__value {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 500;
    color: var(--accent);
    line-height: 1;
  }

  .stat-item__label {
    font-family: var(--font-body);
    font-size: 0.9375rem;
    font-weight: 300;
    color: var(--text-secondary);
    line-height: 1.4;
  }

  /* Tablet: 2x2 grid */
  @media (min-width: 640px) {
    .stats-section__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 3rem;
    }
  }

  /* Desktop: 4 columns in a row */
  @media (min-width: 1024px) {
    .stats-section__grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 2rem;
    }
  }
</style>
