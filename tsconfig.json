{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "Node",
      "jsx": "react-jsx",
      "jsxImportSource": "react",
      "baseUrl": ".",
      "paths": {
        "@/*": ["./astro/src/*"],
        "@/react/*": ["./astro/src/components/react/*"],
        "@/astro/*": ["./astro/src/components/common/*"]
      },
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": [],
    "references": [
      { "path": "./astro" },
      { "path": "./studio" }
    ]
  }